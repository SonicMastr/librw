void main(
	float3 in_pos,
	float4 in_color,
	float2 in_tex0,
	out float4 gl_Position : POSITION,
	out float4 v_color : COLOR,
	out float2 v_tex0 : TEXCOORD0,
	out float v_fog : FOG
)
{
	float4 V = mul(u_world, float4(in_pos, 1.0));
	float4 cV = mul(u_view, V);
	gl_Position = mul(u_proj, cV);
	v_color = in_color;
	v_tex0 = in_tex0;
	v_fog = DoFog(gl_Position.w);
}