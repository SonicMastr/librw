void main(
	uniform float4x4 u_texMatrix,
	float3 in_pos,
	float3 in_normal,
	float4 in_color,
	float2 in_tex0,
	float4 v_color : COLOR,
	out float4 gl_Position : POSITION,
	out float2 v_tex0 : TEXCOORD0,
	out float2 v_tex1 : TEXCOORD1,
	out float v_fog : FOG
)
{
	float4 V = mul(u_world, float4(in_pos, 1.0));
	gl_Position = mul(mul(u_proj, u_view), V);
	float3 N = mul(float3x3(u_world), in_normal);

	v_tex0 = in_tex0;
	v_tex1 = mul(u_texMatrix, float4(N, 1.0)).xy;

	v_color = in_color;
	v_color.rgb += u_ambLight.rgb*surfAmbient;
	v_color.rgb += DoDynamicLight(V.xyz, N)*surfDiffuse;
	v_color = clamp(v_color, 0.0, 1.0);
	v_color *= u_matColor;

	v_fog = DoFog(gl_Position.w);
}